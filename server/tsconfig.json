{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "allowJs": true,
    "outDir": "dist",
    "baseUrl": ".",
    "charset": "utf-8",
    "noImplicitOverride": true,
    "noImplicitReturns": true
  },
  "include": ["login/**/*", "posts/**/*"],
  "exclude": ["dist"]
}
